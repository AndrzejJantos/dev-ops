#!/bin/bash

# Email Notification Configuration
# Copy this file to email-config.sh and configure your settings
# Location: /home/andrzej/DevOps/common/email-config.sh

# ==============================================================================
# ENABLE/DISABLE EMAIL NOTIFICATIONS
# ==============================================================================
export DEPLOYMENT_EMAIL_ENABLED=true

# ==============================================================================
# EMAIL ADDRESSES
# ==============================================================================
export DEPLOYMENT_EMAIL_FROM="biuro@webet.pl"
export DEPLOYMENT_EMAIL_TO="andrzej@webet.pl"

# ==============================================================================
# EMAIL SENDING METHOD
# ==============================================================================
# Choose one of: "aws-ses", "smtp", or "sendmail"
export DEPLOYMENT_EMAIL_METHOD="sendmail"

# ==============================================================================
# AWS SES CONFIGURATION (if using "aws-ses" method)
# ==============================================================================
# Make sure AWS CLI is installed and configured with proper credentials
export AWS_REGION="eu-central-1"
export AWS_SES_CONFIGURATION_SET=""  # Optional: SES configuration set name

# ==============================================================================
# SMTP CONFIGURATION (if using "smtp" method)
# ==============================================================================
# SMTP Server Settings
export SMTP_HOST="smtp.gmail.com"       # Gmail example
export SMTP_PORT="587"                   # 587 for TLS, 465 for SSL
export SMTP_USER="your-email@gmail.com"
export SMTP_PASS="your-app-password"     # Use app password for Gmail
export SMTP_TLS="true"                   # true or false

# Common SMTP Providers Examples:
#
# Gmail:
#   SMTP_HOST="smtp.gmail.com"
#   SMTP_PORT="587"
#   SMTP_TLS="true"
#   Note: Enable 2FA and use App Password
#
# SendGrid:
#   SMTP_HOST="smtp.sendgrid.net"
#   SMTP_PORT="587"
#   SMTP_USER="apikey"
#   SMTP_PASS="your-sendgrid-api-key"
#   SMTP_TLS="true"
#
# Amazon SES SMTP:
#   SMTP_HOST="email-smtp.eu-central-1.amazonaws.com"
#   SMTP_PORT="587"
#   SMTP_USER="your-smtp-username"
#   SMTP_PASS="your-smtp-password"
#   SMTP_TLS="true"
#
# Mailgun:
#   SMTP_HOST="smtp.mailgun.org"
#   SMTP_PORT="587"
#   SMTP_USER="postmaster@your-domain.com"
#   SMTP_PASS="your-mailgun-password"
#   SMTP_TLS="true"
#
# Office 365:
#   SMTP_HOST="smtp.office365.com"
#   SMTP_PORT="587"
#   SMTP_USER="your-email@yourdomain.com"
#   SMTP_PASS="your-password"
#   SMTP_TLS="true"

# ==============================================================================
# SENDMAIL CONFIGURATION (if using "sendmail" method)
# ==============================================================================
# No additional configuration needed
# Make sure mailutils or sendmail is installed:
#   Ubuntu/Debian: sudo apt-get install mailutils
#   CentOS/RHEL: sudo yum install mailx
