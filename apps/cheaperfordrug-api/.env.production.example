# CheaperForDrug API Environment Configuration Template
# Copy this file to .env.production and fill in actual values

# ============================================================================
# RAILS CONFIGURATION
# ============================================================================
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=false
RAILS_LOG_TO_STDOUT=true
RAILS_MAX_THREADS=2
SECRET_KEY_BASE=CHANGEME_generate_with_rails_secret

# ============================================================================
# DATABASE CONFIGURATION (Host Networking - MUST use localhost)
# ============================================================================
DATABASE_URL=postgresql://cheaperfordrug_api_user:CHANGEME_db_password@localhost/cheaperfordrug_production
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cheaperfordrug_production
DATABASE_USER=cheaperfordrug_api_user
DATABASE_PASSWORD=CHANGEME_db_password

# ============================================================================
# REDIS CONFIGURATION (Host Networking - MUST use localhost)
# ============================================================================
REDIS_URL=redis://localhost:6379/2
REDIS_DB_NUMBER=2

# ============================================================================
# ELASTICSEARCH CONFIGURATION (Host Networking - MUST use localhost)
# ============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ENABLE_ELASTICSEARCH=true
ELASTICSEARCH_PROVIDER=aws

# ============================================================================
# API AUTHENTICATION
# ============================================================================
SCRAPER_AUTH_TOKEN=CHANGEME_secure_random_token

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ALLOWED_ORIGINS=https://cheaperfordrug.com,https://www.cheaperfordrug.com

# ============================================================================
# EXTERNAL API KEYS
# ============================================================================
STRIPE_API_KEY=sk_live_CHANGEME
STRIPE_WEBHOOK_SECRET=whsec_CHANGEME
SENDGRID_API_KEY=SG.CHANGEME

# ============================================================================
# ERROR TRACKING
# ============================================================================
ROLLBAR_ACCESS_TOKEN=CHANGEME_optional

# ============================================================================
# FRONTEND URLs
# ============================================================================
FRONTEND_URL=https://cheaperfordrug.com
INTERNAL_FRONTEND_URL=https://cheaperfordrug.com
