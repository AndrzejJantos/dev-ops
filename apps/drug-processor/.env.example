# =============================================================================
# Drug Processor Pipeline - Environment Configuration (Self-Contained)
# =============================================================================
# Copy this file to .env and update with your values:
#   cp .env.example .env
#
# Most values should match your production API .env file
# =============================================================================

# Timezone
TZ=Europe/Warsaw

# =============================================================================
# Database (REQUIRED - same as production API)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/cheaperfordrug_production
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Rails Secrets (REQUIRED - same as production API)
# =============================================================================
SECRET_KEY_BASE=your_secret_key_base_here
RAILS_MASTER_KEY=your_rails_master_key_here

# =============================================================================
# Elasticsearch (for variant reindexing)
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# API Configuration (for Python scripts)
# =============================================================================
# URL that Python scripts use to call API endpoints
API_BASE_URL=http://localhost:3020
SCRAPER_AUTH_TOKEN=your_scraper_auth_token_here

# =============================================================================
# Email Notifications (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
DEPLOYMENT_EMAIL_FROM=biuro@webet.pl
DEPLOYMENT_EMAIL_TO=andrzej@webet.pl
DEPLOYMENT_EMAIL_ENABLED=true
